@page
@model Beamer_shop.Pages.ProductModel
@{
    @using Logic.Models
}


@if(Model.Product != null){
    Product product = Model.Product;
<div class="product-lr-container">
    <div class="product-images">
        <img src="@product.ImageUrl" class="main-image">
            <div class="small-images">
                <img src="@product.ImageUrl" onclick="changeMainImage('https://imageio.forbes.com/specials-images/imageserve/5d35eacaf1176b0008974b54/0x0.jpg?format=jpg&crop=4560,2565,x790,y784,safe&width=1200')">
                <img src="@product.ImageUrl">
                <img src="@product.ImageUrl">
                <img src="@product.ImageUrl">
            </div>
    </div>

    <div class="product-right">
        <h1>@product.Name</h1>
        <h1>€@product.Price</h1>
        <form action="">
            <input type="submit" value="Add to cart">
        </form>
    </div>

    <div class="product-description">
        <h2>Product details</h2>
        <h3>@product.Description</h3>
    </div>
</div>


    if(Model.Product is Car)
    {
        Car car = product as Car;



    }
    /* Recomended */ 
    <div class="product-container" id="recommendList">
        <h2>Recommended products</h2>
        @foreach (Product recomendedProduct in Model.productCollection)
        {
            @if (recomendedProduct is Car)
            {

                Car? car = recomendedProduct as Car;
                DateTime datetime = DateTime.Parse(car.Make);
                string make = datetime.ToString("yyyy");

                <div class="card">
                    <img src="@car.ImageUrl" alt="Image" />
                    <div class="card-body">
                        <div class="row">
                            <div class="card-title">
                                <h4>@car.Name</h4>
                                <h3>@make</h3>
                                <h3>€@car.Price</h3>
                            </div>
                            <div class="view-btn">
                                <a href="/Product?Id=@car.Id">View Details</a>
                            </div>
                        </div>
                        <hr />
                        <p>@car.Description</p>
                    </div>
                </div>
            }

            @if (recomendedProduct is Accessory)
            {

                Accessory? accessory = recomendedProduct as Accessory;

                <div class="card">
                    <img src="@accessory.ImageUrl" alt="Image" />
                    <div class="card-body">
                        <div class="row">
                            <div class="card-title">
                                <h4>@accessory.Name</h4>
                                <h3>@accessory.Type</h3>
                                <h3>€@accessory.Price</h3>
                            </div>
                            <div class="view-btn">
                                <a href="/Product?Id=@accessory.Id">View Details</a>
                            </div>
                        </div>
                        <hr />
                        <p>@accessory.Description</p>
                    </div>
                </div>
            }
        }
    </div>


}

<script>
    function changeMainImage(newSrc) {
        const mainImage = document.querySelector('.main-image');
        mainImage.src = newSrc;
    }
</script>