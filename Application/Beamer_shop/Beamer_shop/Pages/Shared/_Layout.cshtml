<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href=/css/Styles.css rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <title>@ViewData["Title"] - Beamer Shop</title>
</head>
<body>
    <div class="mainwrap">

        <!-- Design lines trough page -->
        <div class="design-lines">
            <div id="left"></div>
            <div id="right"></div>
        </div>

        <!-- Navigation -->
        <div class="nav">
            <ul>
                <li style="font-weight:800"><a class="logo" asp-page="/Index">Beamer Shop</a></li>

                @if (ViewData.ContainsKey("ActiveLink")
                && (string)ViewData["ActiveLink"] == "account")
                {
                    if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <li><a class="active" asp-page="/Account">Account</a></li>
                    } else {
                        <li><a class="active" asp-page="/Login">Login</a></li>
                    }
                }
                else
                {
                    if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <li><a asp-page="/Account">Account</a></li>
                    }
                    else
                    {
                        <li><a asp-page="/Login">Login</a></li>
                    }
                }

                @if (ViewData.ContainsKey("ActiveLink")
                && (string)ViewData["ActiveLink"] == "shop")
                {
                    <li><a class="active" asp-page="/Shop">Shop</a></li>

                }
                else
                {
                    <li><a asp-page="/Shop">Shop</a></li>
                }
                @if (ViewData.ContainsKey("ActiveLink")
              && (string)ViewData["ActiveLink"] == "contact")
                {
                    <li><a class="active" asp-page="/Contact">Contact </a></li>
                }
                else {
                    <li><a asp-page="/Contact">Contact </a></li>
                }
                     <li style="float: right"><a asp-page="#about">Cart</a></li>
            </ul>
        </div>
        <!-- main center container -->
        <div class="center-main">

            @RenderBody()

        </div>

        <!-- footer -->
        <div class="foot">
            <div class="foot-left">
                <h2>Follow us on social media!</h2>
                <ul>
                    <li><a href="#" class="fa fa-instagram"></a></li>
                    <li><a href="#" class="fa fa-facebook"></a></li>
                    <li><a href="#" class="fa fa-linkedin"></a></li>
                </ul>
            </div>
            <div class="foot-right">
                <h2>Contact</h2>
                <h3>Rachelsmolen 1, 5612 MA</h3>
                <h3>Eindhoven, The Netherlands</h3>
            </div>
        </div>

        <div class="cart-wrap">
            <div class="cart-top">
                <h2>X</h2>
                <h2>My Cart</h2>
                <h2>Q</h2> 
            </div>
            <div class="cart-content-container">
                <div class="cart-content">
                    <img src="https://qoets.nl/_next/image?url=https%3A%2F%2Fcms-api-tmp.qoets.nl%2Fmedia%2Fimages%2Fbmw_i4_11_29eSVhI.width-2800.jpegquality-84.jpg&amp;w=3840&amp;q=75" alt="Dinosaur"> 
                    <div class="content-info">
                        <h4>BMW M4 Comp</h4>
                        <h3>$79.000</h3>
                    </div>
                        <form class="content-quantity">
                            <input type="submit" value="+">
                            <h2 style="text-align: center;margin: 10px;">1</h2>
                            <input type="submit" value="-">
                        </form>
                    </div>
            </div>
            <div class="cart-subinfo">
                <div class="sub1">
                <h4>Subtotal: </h4>
                <h4>$13000.99</h4>
                </div>
                <div class="sub2">
                <h4>Tax: </h4>
                <h4>$1330.00</h4>
                </div>
            </div>
        </div>

    </div>

    <!-- JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)



</body>
</html>

